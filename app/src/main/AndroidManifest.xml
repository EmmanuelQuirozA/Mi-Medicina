<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission
        android:name="android.permission.SCHEDULE_EXACT_ALARM"
        tools:targetApi="s" />
    <uses-permission
        android:name="android.permission.USE_EXACT_ALARM"
        tools:targetApi="u" />

    <application
        android:name=".MiMedicinaApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiMedicina">
        <receiver
            android:name="com.example.mimedicina.alarms.MedicineAlarmReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false" />

        <activity
            android:name=".ui.medicines.MedicinesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.profiles.ProfilesActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>